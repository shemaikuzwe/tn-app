//we recommand to use prisma extensions for good dx
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
    id  String @default(uuid()) @id 
    name String
    email String @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}